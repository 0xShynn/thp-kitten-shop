<div class="container py-3 px-md-5"><h2>Mon panier</h2>
</div>
<%@cart_items.each do |cart_item|%>
  
  <div class="row">
  <div class="card bg-primary col-sm-3">
    <div class="card-body text-center">
      <img src="<%=cart_item.item.img_link%>" class="img-rounded" alt="Kitten" style="width:50px;">
    </div>
  </div>
  <div class="card bg-secondary col-sm-5">
    <div class="card-body text-center">
      <p class="card-text"><%=cart_item.item.name%></p>
    </div>
  </div>
  <div class="card bg-primary col-sm-3">
    <div class="card-body text-center">
      <p class="card-text"><%=cart_item.item.price%></p>
    </div>
  </div>
</div>
<div class="container">
<div class="row justify-content-end m-5">
<div class="card bg-secondary">
<p>Total : <%=@total%></p>
</div>
</div>
<%end%>
<p>Continuer mes achats

Passer la commande </p>

<p><%=cart_item.item.name%> <%=cart_item.item.price%> 
  <%= link_to 'Retirer du panier', cart_item_path(cart_item_id: cart_item.id), method: :delete, data: { confirm: 'Are you sure?' } %></p>