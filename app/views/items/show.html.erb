
<div class="container my-5 text-center">
  <h1><%= @item.name %></h1>
  <p>Description  : <%= @item.description %> </p>
  <p class="h3 mb-5">Prix : <%=@item.price %> </p>

  <h3>Photo </h3>
<%if @item.photo.attached?%>
  <%= image_tag @item.photo, alt: 'photo' %>
<%else%>
  <p>=== Il n'y a pas encore d'image lié à cet item ===</p>
<%end%>

<%= form_for @cart_item = CartItem.new, :url => cart_items_path(cart_id: Cart.find_by(user_id: current_user.id), item_id: @item.id) do |f| %>

  <div class="field">
    <%= f.label :quantite %><br>
    <%= f.text_field :quantity, placeholder: 1,  class: "form-control"%>
  </div>

<%if user_signed_in? == true%>
  <%if is_admin(current_user)%>
    <%= link_to "Modifier les informations du produit", edit_admin_item_path(@item), class:"btn btn-warning" %>
  <%end%>
    <div class="btn btn-success">
      <%= f.submit%>
    </div>
  <% end %>
<%end%>
  <br>
  <br>

  <% if is_admin(current_user) %>
    <%= form_tag item_photos_path(@item), multipart: true do %>
      <%= file_field_tag :photo %>
      <%= submit_tag "mettre à jour" %>
    <% end %>
  <% end %>

<%= link_to "Retourner sur la page d'accueil", root_path, class:"btn btn-outline-secondary"%>
</div>