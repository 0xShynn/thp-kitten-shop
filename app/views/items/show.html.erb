
<div class="container my-5 text-center">

  <div class="row">

    <div class="col-7">
    
      <%if @item.photo.attached?%>
        <%= image_tag @item.photo, alt: 'photo', class: 'w-100' %>
      <%else%>
        <div class="bg-primary d-inline-block mb-4" style="height: 635px; width: 100%;"></div>
      <%end%>

    </div>

    <div class="col-5">
      <div class="info text-left">
        <h1 class="mt-5"><%= @item.name %></h1>
        <p>Description : <%= @item.description %> </p>
        <p class="h3 mb-5">Prix : <%=@item.price %> â‚¬</p>

        <% if user_signed_in? == true %>
          <% if is_admin(current_user) %>
            <%= link_to "Modifier les informations du produit", edit_admin_item_path(@item), class:"btn btn-outline-warning mb-4" %>
          <% end %>
          <%= link_to "Ajouter au panier",cart_items_path(cart_id: Cart.find_by(user_id: current_user.id), item_id: @item.id), class:"btn btn-primary mb-4", method: "post" %>
        <% end %>
        <br>

        <%= link_to root_path, class: "btn btn-outline-primary" do %>
          <i class="fas fa-home mr-2"></i> 
          Accueil
        <% end %>
      </div>
    </div>

  </div>

</div>